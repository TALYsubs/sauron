{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@company/*": ["app/company/src/*"],
      "@user/*": ["app/user/src/*"],
      "@federation/*": ["app/taly-federation/src/*"]
    }
  },
  "include": [
    "app/**/*",
    "packages/**/*"
  ]
}
