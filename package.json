{
  "name": "sauron",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:company": "turbo run dev --filter=./subgraphs/company",
    "dev:user": "turbo run dev --filter=./subgraphs/user",
    "dev:ecommerce": "turbo run dev --filter=./subgraphs/ecommerce",
    "dev:product": "turbo run dev --filter=./subgraphs/product",
    "dev:payment": "turbo run dev --filter=./subgraphs/payment",
    "dev:plan": "turbo run dev --filter=./subgraphs/plan",
    "dev:subscription": "turbo run dev --filter=./subgraphs/subscription",
    "dev:federation": "turbo run dev --filter=./apps/federation",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "dependencies": {},
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.12"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "bun@1.0.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "subgraphs/*"
  ]
}
