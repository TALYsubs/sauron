{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "update:submodules": {
      "outputs": [],
      "cache": false
    },
    "install": {
      "outputs": ["node_modules/**", "**/node_modules/**"],
      "dependsOn": ["update:submodules"],
      "cache": false
    },
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["install"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "update-sdl": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "federation": {
      "cache": false,
      "dependsOn": ["update-sdl"],
      "persistent": true
    }
  }
}
